<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentActivity2.bottom_nav.status.StatusAlert">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/big_cirlce_red"
            android:background="@drawable/ic_bigcircle_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/little_orange_2"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/small_circle_red"
            android:background="@drawable/ic_smallcircle_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/little_orange_2"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lightning_1"
            android:background="@drawable/ic_lightning"
            app:layout_constraintLeft_toLeftOf="@+id/small_circle_red"
            app:layout_constraintRight_toRightOf="@+id/small_circle_red"
            app:layout_constraintTop_toTopOf="@+id/small_circle_red"
            app:layout_constraintBottom_toBottomOf="@+id/alert_info"
            android:layout_marginRight="30dp"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lightning_2"
            android:background="@drawable/ic_lightning"
            app:layout_constraintLeft_toLeftOf="@+id/small_circle_red"
            app:layout_constraintRight_toRightOf="@+id/small_circle_red"
            app:layout_constraintTop_toTopOf="@+id/small_circle_red"
            app:layout_constraintBottom_toBottomOf="@+id/alert_info"
            android:layout_marginLeft="30dp"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alert_info"
            android:background="@drawable/ic_alert_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lightning_1"
            app:layout_constraintBottom_toBottomOf="@+id/small_circle_red"
            android:layout_marginTop="30dp"
            tools:ignore="MissingConstraints"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_red_2"
            android:background="@drawable/ic_little_circle_red"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/little_orange_2"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_orange_2"
            android:background="@drawable/ic_little_cirle_orange"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_green_2"
            android:background="@drawable/ic_little_circle_green"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_red"
            app:layout_constraintLeft_toLeftOf="@+id/little_orange_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-6km"
            android:id="@+id/text_red_2"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/little_orange_2"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-8km"
            android:id="@+id/text_orange_2"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            android:id="@+id/text_green_2"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_red"
            app:layout_constraintLeft_toLeftOf="@+id/little_orange_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inform_text_alert"
            android:text="Cloud-to-Ground lightning detected"
            android:textColor="#FF0000"
            android:background="@drawable/inform_alert_background"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/little_orange_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
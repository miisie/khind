<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_alerts"
        android:textStyle="bold"
        android:text="Time"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mess_alerts"
        android:text="Mess"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/time_alerts"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submess_alerts"
        android:text="Submess"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/mess_alerts"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_chevron_small"
        android:id="@+id/detail_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_alerts"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
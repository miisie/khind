<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentActivity2.bottom_nav.status.StatusWarning">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/big_cirlce_orange"
            android:background="@drawable/ic_bigcircle_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/little_orange"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/small_circle_orange"
            android:background="@drawable/ic_smallcircle_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/little_orange"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/symbol"
            android:background="@drawable/ic_lightning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_orange"
            app:layout_constraintBottom_toBottomOf="@+id/warning_info"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:id="@+id/warning_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_warning_signal"
            app:layout_constraintBottom_toBottomOf="@+id/small_circle_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/symbol"
            android:layout_marginTop="30dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_red"
            android:background="@drawable/ic_little_circle_red"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/little_orange"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_orange"
            android:background="@drawable/ic_little_cirle_orange"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_green"
            android:background="@drawable/ic_little_circle_green"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_orange"
            app:layout_constraintLeft_toLeftOf="@+id/little_orange"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-6km"
            android:id="@+id/text_red"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/little_orange"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-8km"
            android:id="@+id/text_orange"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            android:id="@+id/text_green"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_orange"
            app:layout_constraintLeft_toLeftOf="@+id/little_orange"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inform_text"
            android:text="Cloud-to-Ground lightning detected"
            android:textColor="#FE9700"
            android:background="@drawable/inform_warning_background"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/little_orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
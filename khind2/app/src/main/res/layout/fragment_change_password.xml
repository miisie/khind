<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentActivity2.nav_drawer.myprofileFragement.ChangePasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">

        <!--reset email-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/cardview_light_background"
            android:id="@+id/action_bar1"
            tools:ignore="MissingConstraints">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnbackprofile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/ic_baseline_chevron_left_24" />
            <TextView
                android:id="@+id/fp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Change Password"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A9A9A9"
            app:layout_constraintTop_toBottomOf="@+id/action_bar1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/old_password"
            tools:ignore="MissingConstraints"
            android:text="Old Password"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/action_bar1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"/>

        <!--reset username-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/input_old_password"
            android:background="@drawable/username_background"
            tools:ignore="MissingConstraints"
            android:textColor="#141414"
            android:inputType="text"
            android:textSize="20dp"
            android:hint="enter password"
            app:layout_constraintTop_toBottomOf="@id/old_password"
            android:padding="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">
        </EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/new_password"
            tools:ignore="MissingConstraints"
            android:text="New Password"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/input_old_password"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/input_new_password"
            android:background="@drawable/username_background"
            tools:ignore="MissingConstraints"
            android:textColor="#141414"
            android:inputType="text"
            android:textSize="20dp"
            android:hint="enter new password"
            app:layout_constraintTop_toBottomOf="@id/new_password"
            android:padding="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/confirm_new_password"
            tools:ignore="MissingConstraints"
            android:text="Confirm New Password"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/input_new_password"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/new_password_check"
            android:background="@drawable/username_background"
            tools:ignore="MissingConstraints"
            android:textColor="#141414"
            android:inputType="text"
            android:textSize="20dp"
            android:hint="confirm new password"
            app:layout_constraintTop_toBottomOf="@id/confirm_new_password"
            android:padding="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">
        </EditText>


        <!--login-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/update"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/new_password_check"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Update"
            android:textColor="#ffffff"
            android:backgroundTint="@color/black"
            android:padding="20dp">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
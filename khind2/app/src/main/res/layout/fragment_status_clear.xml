<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentActivity2.bottom_nav.status.StatusClear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/big_cirlce_green"
            android:background="@drawable/ic_bigcircle_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/little_orange_3"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/small_circle_green"
            android:background="@drawable/ic_smallcircle_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/little_orange_3"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/symbol_cloud"
            android:background="@drawable/ic_cloud"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/clear_info"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/symbol_sun"
            android:background="@drawable/ic_sun"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/clear_info"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tia_1"
            android:background="@drawable/ic_tia1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/clear_info"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tia_2"
            android:background="@drawable/ic_tia2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/clear_info"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="62dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tia_3"
            android:background="@drawable/ic_tia3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/clear_info"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="50dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tia_4"
            android:background="@drawable/ic_tia4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/clear_info"
            android:layout_marginLeft="95dp"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tia_5"
            android:background="@drawable/ic_tia5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/small_circle_green"
            app:layout_constraintBottom_toBottomOf="@+id/clear_info"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_info"
            android:background="@drawable/ic_clear_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/symbol_cloud"
            app:layout_constraintBottom_toBottomOf="@+id/small_circle_green"
            android:layout_marginTop="30dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_red_3"
            android:background="@drawable/ic_little_circle_red"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/little_orange_3"
            android:layout_marginBottom="50dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_orange_3"
            android:background="@drawable/ic_little_cirle_orange"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/little_green_3"
            android:background="@drawable/ic_little_circle_green"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_green"
            app:layout_constraintLeft_toLeftOf="@+id/little_orange_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-6km"
            android:id="@+id/text_red_3"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/little_orange_3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-8km"
            android:id="@+id/text_orange_3"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            android:id="@+id/text_green_3"
            app:layout_constraintTop_toBottomOf="@+id/big_cirlce_green"
            app:layout_constraintLeft_toLeftOf="@+id/little_orange_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inform_clear_text"
            android:text="Cloud-to-Ground lightning detected"
            android:textColor="	#9DD31C"
            android:background="@drawable/inform_clear_background"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/little_orange_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="51px" android:height="31px"/>
            <solid android:width="1dp" android:color="#9DD31C"/>
            <corners android:radius="100dp"/>
            <stroke android:width="1dp" android:color="#A9A9A9"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size android:width="36dp" android:height="20dp"/>
            <solid android:width="1dp" android:color="@color/white"/>
            <stroke android:width="1dp" android:color="#A9A9A9"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

</selector>